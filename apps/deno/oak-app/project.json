{
  "name": "deno-oak-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/deno/oak-app/src",
  "targets": {
    "build": {
      "executor": "@nrwl/deno:bundle",
      "outputs": ["dist/apps/deno/oak-app"],
      "options": {
        "main": "apps/deno/oak-app/src/main.ts",
        "outputFile": "dist/apps/deno/oak-app/main.js",
        "denoConfig": "apps/deno/oak-app/deno.json"
      }
    },
    "serve": {
      "executor": "@nrwl/deno:run",
      "options": {
        "buildTarget": "deno-oak-app:build",
        "watch": true
      }
    },
    "test": {
      "executor": "@nrwl/deno:test",
      "outputs": ["coverage/apps/deno/oak-app"],
      "options": {
        "coverageDirectory": "coverage/apps/deno/oak-app",
        "denoConfig": "apps/deno/oak-app/deno.json"
      }
    },
    "lint": {
      "executor": "@nrwl/deno:lint",
      "options": {
        "denoConfig": "apps/deno/oak-app/deno.json"
      }
    }
  },
  "tags": []
}
