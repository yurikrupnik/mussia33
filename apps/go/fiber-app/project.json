{
  "name": "go-fiber-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/go/fiber-app",
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "outputPath": "dist/apps/go/fiber-app",
        "main": "apps/go/fiber-app/main.go"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "apps/go/fiber-app/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "docker-buildx": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "build",
          "params": "forward"
        }
      ],
      "options": {
        "command": "docker buildx build --push --target alpine --build-arg DIST_PATH=dist/apps/go/fiber-app . -t yurikrupnik/fiber-app:$TAG -t europe-central2-docker.pkg.dev/mussia33/container-repository/fiber-app:$TAG"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "kaniko",
        "metadata": {
          "images": [
            "yurikrupnik/kaniko-fiber-app"
          ],
          "load": true,
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-"
          ]
        }
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": [
        {
          "target": "build",
          "params": "forward"
        }
      ],
      "options": {
        "push": true,
        "file": "./Dockerfile",
        "target": "alpine",
        "platforms": [
          "linux/amd64"
        ],
        "build-args": [
          "DIST_PATH=dist/apps/go/fiber-app"
        ],
        "metadata": {
          "images": [
            "yurikrupnik/fiber-app",
            "$REGISTRY/fiber-app"
          ],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha"
          ]
        }
      }
    }
  },
  "tags": []
}
