{
  "name": "go-fiber-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/go/fiber-app",
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "outputPath": "dist/apps/go/fiber-app",
        "main": "apps/go/fiber-app/main.go"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "apps/go/fiber-app/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "docker-buildx": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "build",
          "projects": "self",
          "params": "forward"
        }
      ],
      "options": {
        "command": "docker buildx build --push --target alpine --build-arg DIST_PATH=dist/apps/go/fiber-app . -t yurikrupnik/fiber-app"
      }
    }
  },
  "tags": []
}
